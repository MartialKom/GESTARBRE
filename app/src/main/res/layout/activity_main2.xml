<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/monarbre"
    tools:context=".Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/olivesombre"
        >

        <ImageView
            android:layout_width="93dp"
            android:layout_height="70dp"
            android:layout_marginTop="-10dp"
            android:src="@drawable/logo2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G E S T A R"
            android:textSize="28dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            />
    </LinearLayout>


    <Button
        android:id="@+id/cordo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Vos CoordonÃ©es"
        android:textColor="#692222"
        android:textSize="20dp"
        android:textStyle="italic"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:background="#CFC5BC"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="100dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true">

        <ImageView
            tools:ignore="ContentDescription"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bouton1"
            android:layout_centerHorizontal="true"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardL"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/cordo"
        android:padding="25dp"
        android:layout_margin="20dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="25dp">



    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/longitude"
        android:layout_below="@+id/cordo"
        android:background="#771E4E4E"
        android:hint="Longitude"
        android:textColorHint="#E47C7676"
        android:textColor="#D2D7DA"
        android:drawableLeft="@drawable/ic_edit_location_black_24dp"
        android:drawablePadding="20dp"
        />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardl"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/cardL"
        android:padding="25dp"
        android:layout_margin="20dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="25dp">


        <EditText
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#771E4E4E"
            android:drawableLeft="@drawable/ic_edit_location_black_24dp"
            android:drawablePadding="20dp"
            android:hint="Latitude"
            android:textColor="#D2D7DA"
            android:textColorHint="#E47C7676" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardl"
        android:layout_alignRight="@id/cardl"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:background="#4CAF50"
        android:id="@+id/cardS"
        >

        <Button
            android:id="@+id/suivant"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Suivant"
            android:textColor="#070707"
            android:textSize="20dp"
            android:textStyle="italic"
            android:background="#4CAF50"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"

            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardl"
        android:layout_alignLeft="@id/cardl"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:background="#4CAF50"
        >

        <Button
            android:id="@+id/location"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Ma position"
            android:textColor="#070707"
            android:textStyle="italic"
            android:background="#3FCCBE"
            android:drawableRight="@drawable/ic_place_black_24dp"
            />


    </androidx.cardview.widget.CardView>




</RelativeLayout>