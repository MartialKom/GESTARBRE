<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".form_arbre"
    android:background="@drawable/monarbre">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/LL"
      android:layout_margin="35dp"
      android:text="DÃ©tails sur l'arbre :"
      android:gravity="center"
      android:textColor="#262E5A"
      android:textSize="35dp"
      android:textStyle="italic"

      />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/olivesombre"
        android:id="@+id/LL"
        >

        <ImageView
            android:layout_width="93dp"
            android:layout_height="70dp"
            android:layout_marginTop="-10dp"
            android:src="@drawable/logo2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G E S T A R"
            android:textSize="28dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardN"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp"

      >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nomA"
            android:background="#771E4E4E"
            android:hint="Nom de l'arbre"
            android:padding="20dp"
            android:textColor="#D2D7DA"
            android:textColorHint="#E47C7676"
            android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
            android:drawablePadding="20dp"/>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardD"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@+id/cardN"
        android:layout_margin="25dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp"

        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/description"
            android:background="#771E4E4E"
            android:hint="Description de l'arbre"
            android:textColor="#D2D7DA"
            android:textColorHint="#E47C7676"
            android:padding="20dp"
            android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
            android:drawablePadding="20dp"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardNS"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_below="@+id/cardD"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp"

        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nomS"
            android:background="#771E4E4E"
            android:hint="Nom scientifique de l'arbre"
            android:textColor="#D2D7DA"
            android:textColorHint="#E47C7676"
            android:padding="20dp"
            android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
            android:drawablePadding="20dp"/>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardNS"
        android:layout_alignRight="@id/cardNS"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:background="#4CAF50"
        android:id="@+id/cardV"
        android:layout_margin="25dp"
        >

        <Button
            android:id="@+id/valider"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Valider"
            android:textSize="20dp"
            android:textStyle="italic"
            android:background="#4CAF50"
            android:textColor="#070707"
            android:drawableRight="@drawable/ic_check_box_black_24dp"
            android:drawablePadding="10dp"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardNS"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:background="#4CAF50"
        android:layout_margin="25dp"
        >

        <Button
            android:id="@+id/retour"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Retour"
            android:textSize="20dp"
            android:textStyle="italic"
            android:background="#3FCCBE"
            android:textColor="#070707"
            android:drawableLeft="@drawable/ic_chevron_left_black_24dp"


            />


    </androidx.cardview.widget.CardView>


</RelativeLayout>